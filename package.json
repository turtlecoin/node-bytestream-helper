{
  "name": "bytestream-helper",
  "version": "0.0.10",
  "description": "bytestream serialization helper for handling over the wire encoded byte streams",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "docs": "./node_modules/.bin/typedoc && touch docs/.nojekyll && git restore docs/CNAME",
    "prepublishOnly": "npm test && npm run docs",
    "style": "./node_modules/.bin/eslint src/*.ts",
    "fix-style": "./node_modules/.bin/eslint --fix src/*.ts",
    "test": "npm run style && npm run build && npm run test-mocha",
    "test-mocha": "./node_modules/.bin/mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turtlecoin/node-bytestream-helper-helper.git"
  },
  "homepage": "https://bytestream.turtlecoin.dev",
  "bugs": {
    "url": "https://github.com/turtlecoin/node-bytestream-helper-helper/issues"
  },
  "keywords": [
    "TurtleCoin",
    "bytestream",
    "helper",
    "serialization",
    "encoder",
    "decoder"
  ],
  "author": "The TurtleCoin Developers",
  "contributors": [
    "Brandon Lehmann <brandonlehmann@gmail.com> (https://github.com/brandonlehmann)"
  ],
  "license": "MIT",
  "dependencies": {
    "big-integer": "^1.6.48"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^8.1.1",
    "typedoc": "^0.18.0",
    "typescript": "^3.9.7"
  }
}
